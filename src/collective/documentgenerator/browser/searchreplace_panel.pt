<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
         metal:use-macro="here/prefs_main_template/macros/master"
         i18n:domain="plone">

<metal:block fill-slot="top_slot"
         tal:define="dummy python:request.set('disable_border',1)" />

<body>
<div id="content" metal:fill-slot="prefs_configlet_content">

    <h1 class="documentFirstHeading" tal:content="view/label">View Title</h1>

    <div id="layout-contents">
        <span tal:replace="structure view/contents" />
    </div>

    <div class="portlet" tal:condition="python: bool(view.get_preview())">
        <div class="portletHeader">
            <span class="portletTitle">Preview</span>
        </div>
        <table class="datagridwidget-table-view" tal:define="podtemplates python:view.get_preview().items()">
            <thead>
            <tr>
                <th class="header">
                    Template
                </th>
                <th class="header">
                    Matched
                </th>
            </tr>
            </thead>
            <tbody id="datagridwidget-tbody">
            <tal:block repeat="podtemplate podtemplates">
                <tr>
                    <td>
                        <span tal:replace="python:podtemplate[0]" />
                    </td>
                    <td><span tal:replace="python:podtemplate[1]" /></td>
                </tr>
            </tal:block>
            </tbody>
        </table>
    </div>

    <div class="portlet" tal:condition="python: bool(view.get_results())">
        <div class="portletHeader info">
            <span class="portletTitle">Results</span>
        </div>
        <table class="datagridwidget-table-view" tal:define="podtemplates python:view.get_results().items()">
            <thead>
            <tr>
                <th class="header">
                    Template
                </th>
                <th class="header">
                    Matched
                </th>
                <th class="header">
                    Replaced by
                </th>
            </tr>
            </thead>
            <tbody id="datagridwidget-tbody">
            <tal:block repeat="podtemplate podtemplates">
                <tr>
                    <td>
                        <span tal:replace="python:podtemplate[0]" />
                    </td>
                    <td><span tal:replace="python:podtemplate[1]['matched']"/></td>
                    <td><span tal:replace="python:podtemplate[1]['replaced_by']" /></td>
                </tr>
            </tal:block>
            </tbody>
        </table>
    </div>
</div>
</body>
</html>
