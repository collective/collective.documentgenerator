<div id="doc-generation-view"
     tal:condition="view/available"
     tal:define="infos view/get_links_info;
         titles python:infos.keys();"
     i18n:domain="collective.documentgenerator">

    <metal:block tal:define="infos view/get_links_info"/>
    <ul class="pod-template">
      <li tal:repeat="title titles">
        <span tal:replace="title">Template title</span>
        <span style="margin-left: 5px; font-size: 1.5em;">&#8250;</span>
        <span tal:repeat="link python: infos[title]"
              style="margin-left:3px; margin-right:3px;">
            <a target="_blank"
               class="generation-link"
               tal:define="descr python: '{} {}'.format(link['title'], link['output_format'].upper());"
               tal:attributes="href link/link;
                               title descr;">
              <img src="#" class="svg-icon"
                   tal:attributes="src string:${view/portal_url}/++resource++collective.documentgenerator/${link/output_format}.svg;
                                   alt descr;" />
            </a>
        </span>
        <span>|</span>
      </li>
    </ul>
</div>
