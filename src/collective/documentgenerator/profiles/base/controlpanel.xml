<?xml version="1.0" encoding="utf-8"?>
<object xmlns:i18n="http://xml.zope.org/namespaces/i18n"
        name="portal_controlpanel"
        purge="False"
        i18n:domain="collective.documentgenerator"
>

  <configlet action_id="collective.documentgenerator.settings"
             appId="collective.documentgenerator"
             category="Products"
             condition_expr=""
             icon_expr="string:mimetype-application/vnd.oasis.opendocument.text"
             title="Document Generator settings"
             url_expr="string:${portal_url}/@@collective.documentgenerator-controlpanel"
             visible="True"
             i18n:attributes="title"
  >
    <permission>Manage portal</permission>
  </configlet>

</object>
